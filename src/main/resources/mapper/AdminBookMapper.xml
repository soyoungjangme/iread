<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.iread.mapper.AdminBookMapper">

    <select id="getIsbn" resultType="string">
        select isbn
        from books
    </select>

    <insert id="registBook" parameterType="com.project.iread.dto.BookDTO">
        insert into books(
                        isbn,
                        title,
                        link,
                        image,
                        author,
                        discount,
                        publisher,
                        pubdate,
                        description)
        values(
            #{isbn},
            #{title},
            #{link},
            #{image},
            #{author},
            #{discount},
            #{publisher},
            #{pubdate},
            #{description})

    </insert>

<!--  모든 도서 목록 호출  -->
    <select id="getAllBook" resultType="com.project.iread.dto.BookDTO">
        select * from books
    </select>

<!--  도서목록_검색호출  -->
    <select id="getSearchBook" parameterType="string" resultType="com.project.iread.dto.BookDTO">
        select * from books b
        where b.title like concat ('%', #{keyword}, '%')
        or b.author like concat ('%', #{keyword}, '%')
        or b.publisher like concat ('%', #{keyword}, '%')
    </select>

<!--  장르등록  -->
    <insert id="registGenre" parameterType="list">
        insert into genres(genre_name)
        values
        <foreach item="genre" collection="list" separator=",">
            (#{genre})
        </foreach>
    </insert>

<!--  장르삭제  -->
    <delete id="deleteGenre" parameterType="list">
        delete from genres
        where genre_name in
            <foreach collection="list" item="newGenre" open="(" separator="," close=")">
                #{newGenre}
            </foreach>
    </delete>

<!--  장르호출  -->
    <select id="getGenre" resultType="string">
        select genre_name
        from genres
    </select>

</mapper>